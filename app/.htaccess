Options -Indexes
Deny from all

RewriteEngine On
RewriteBase /Scarlet_Shop/public

# Si se genera un error 403, redirigir a index.php/403
RewriteCond %{ENV:REDIRECT_STATUS} 403
RewriteRule ^ - [L,R=404]

# Todas las demás solicitudes se envían a index.php?url=<ruta>
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]